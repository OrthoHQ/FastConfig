{
    "manifest_version" : 3,
    "name" : "FastConfigs",
    "description" : "Automatically fill heroku configuration variables, by simply impoting a .txt, .json or .env file.",
    "version" : "1.0.0",
    "content_scripts" : [
        {
            "matches" : ["https://dashboard.heroku.com/*"],
            "js" : ["index.js"]
        }
    ],
    "action" : {
        "default_popup" : "popup.html",
        "default_title" : "FastConfigs"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "https://dashboard.heroku.com/*"
    ]
}